year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Article",
         title = "Confounder-Adjusted Survival Curves: A Review and Simulation Study",
         author = c(person("Robin", "Denz"),
                    person("Nina", "Timmesfeld"),
                    person("Henrik", "Rudolf")),
         year = year,
         note = note,
         url = "https://github.com/RobinDenz1/adjustedCurves")